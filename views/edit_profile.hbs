	<div id="fh5co-main">


	<div class="container-fluid" class="container">
		<div class="container">
			<table class="table table-responsive table-hover table-striped">
	    	<div class="fh5co-narrow-content">
	      	<h1>Please Sign Up To get Start</h1>

	    	</div>
		<div class="row">
	    <div class="col-md-8">


	        <hr>
	        {{#if errors }}
	        <ul class="alert alert-danger" >
	        {{# each errors}}

	<li>   {{this.msg}}</li>

	        {{/each}}
	      </ul>
	      {{/if}}


	            <form class="form-horizontal" method="post" action="/users/update" enctype="multipart/form-data" >
						<tr><td><div class="form-group">
				          <label class="control-label col-sm-4">Full Name <span class="text-danger">*</span></label>
				          <div class="col-md-5 col-sm-9">
				            <input type="text" class="form-control" required value="{{user.username}}" name="username"  placeholder="Enter your Name here" >
				          </div>
				    </div></td></tr>

					 <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Set Password <span class="text-danger">*</span></label>
	          <div class="col-md-5 col-sm-8">
	            <div class="input-group">
	              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
	              <input type="password" value="{{user.password}}" required class="form-control" name="password"  placeholder="Choose password (5-15 chars)" >
	           </div>
	          </div>
	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Confirm Password <span class="text-danger">*</span></label>
	          <div class="col-md-5 col-sm-8">
	            <div class="input-group">
	              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
	              <input type="password" value="" required class="form-control" name="cpassword"  placeholder="Confirm your password" >
	            </div>
	          </div>
	        </div></td></tr>


	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Contact No. <span class="text-danger">*</span></label>
	          <div class="col-md-5 col-sm-8">
	          	<div class="input-group">
	              <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
	            <input type="text" class="form-control" required value="{{user.contactno}}" name="contactno"  placeholder="Enter your Primary contact no." >
	            </div>
	          </div>
	        </div></td></tr>

	         <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Address <br>
	          <small>(your colony and street no cumpulsory)</small></label>
	          <div class="col-md-5 col-sm-8">
	            <input type="text" class="form-control" required name="address" id="contactnum2" placeholder="Any other or Landline no (if any)" value="{{user.address}}">
	          </div>
	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Profile Photo <br>
	          <small>(File should be jpg or png)</small></label>
	          <div class="col-md-5 col-sm-8">
	            <input type="file" class="form-control" required name="picture"  placeholder="Any other or Landline no (if any)" >
	          </div>
	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">What is Your Role? <br>
	          </label>
	          <div class="col-md-5 col-sm-8">
	          <select style="cursor:pointer" value="{{user.type}}" class="form-control glyphicon glyphicon-random" required name="type">
	            <option name="mechanic">Mechanic</option>
	            <option name="electrician">Electrician</option>
	            <option name="plumber">Plumber</option>
	            <option name="photographer">Photographer</option>
	            <option name="carpenter">Carpenter</option>
	            <option name="driver">Driver</option>
	            <option name="tutor">Home Tutor</option>
	            <option name="labour">Labour</option>
	          </select>
	        </div>

	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">City <br>
	          </label>
	          <div class="col-md-5 col-sm-8">
	            <input type="text" class="form-control" required name="city"  placeholder="Any other or Landline no (if any)" value="{{user.city}}">
	          </div>
	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Country <br>
	        </label>
	          <div class="col-md-5 col-sm-8">
	            <input type="text" class="form-control" required name="country"  placeholder="Any other or Landline no (if any)" value="{{user.country}}">
	          </div>
	        </div></td></tr>
	        <tr><td><div class="form-group">
	          <label class="control-label col-sm-4">Change Your Experience <br>
	          </label>
	          <div class="col-md-5 col-sm-8">
							<textarea class="form-control" rows="7" placeholder="e.g your company experience or your qualification and your biography"  name="description">{{user.description}}</textarea>
	          </div>
	        </div></td></tr>


	      <tr><td>  <div class="form-group">
	          <div class="col-xs-offset-3 col-md-8 col-sm-9"><span class="text-muted"><span class="label label-danger">Note:-</span> By clicking Sign Up, you agree to our <a href="#">Terms</a> and that you have read our <a href="#">Policy</a>, including our <a href="#">Cookie Use</a>.</span> </div>
	        </div>
	        <tr><td><div class="form-group">
	          <div class="col-xs-offset-3 col-xs-10">
	            <input name="Submit" type="submit" value="Sign Up" class="btn btn-primary">
	          </div>
	        </div><td></tr>
	      </form>


	    </div>
	</div>
	</div>




	</table>

